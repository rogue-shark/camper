<% layout('layouts/boilerplate') %>
<a href="/campgrounds" class="hero-head">
    <h1 class="display-6 d-inline">Search results</h1>
</a>

<!-- Search camp  -->
<!-- NOTE:so it'll instead for putting values in req.body object [POST] - it'll put into req.query object [GET] -->
<form action="/campgrounds/search_result" method="GET" class="form-inline">
  <div class="input-group my-3 ">
    <input
      type="text"
      name="search"
      placeholder="Search Campground here..."
      class="form-control rounded"
    />
    <button class="btn btn-dark"> <i class="fas fa-search"></i></button>
  </div>
</form>

<% for (let campground of campgrounds) { %>
    <div class="card mb-3 shadow">
      <div class="row m-2 mt-3">
        <% if(campground.images.length) { %>
        <div class="col-md-4 mb-2">
          <img
            class="img-fluid"
            src="<%=campground.images[0].url%>"
            crossorigin
          />
        </div>
        <% } else { %>
        <div class="col-md-4 mb-2">
          <img
            class="img-fluid"
            src="https://res.cloudinary.com/dsdsmxmd3/image/upload/v1673373817/YelpCamp-proto/default.jpg"
            crossorigin
          />
        </div>
        <% } %>
        <div class="col-mg-8 mb-2">
          <h5 class="card-title"><%= campground.title %></h5>
          <div class="mb-2">
            <span><i class="fa-solid fa-thumbs-up"></i> <%= campground.likes.length %> </span>
          </div>
          <!-- for testing: <h5 class="card-title"><%= campground.properties.popUpMarkup %> </h5> -->
          <p class="card-text"><%= campground.description %></p>
          <p class="text-muted"><%= campground.location %></p>
          <a class="btn btn-primary" href="/campgrounds/<%=campground._id%>">
            More Info
          </a>
        </div>
      </div>
    </div>
    <% } %>